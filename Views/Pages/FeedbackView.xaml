<UserControl x:Class="AutoPartsApp.Views.Pages.FeedbackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutoPartsApp.Views.Pages"
             xmlns:viewmodels="clr-namespace:AutoPartsApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:FeedbackViewModel}"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">
    <GroupBox Header="Моя обратная связь"
              Style="{StaticResource MaterialDesignCardGroupBox}"
              VerticalAlignment="Center"
              MaxWidth="1000">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding MyFeedbacks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="10"
                                                 Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Height="100"
                                             Width="100">
                                        <Ellipse.Fill>
                                            <ImageBrush Stretch="UniformToFill">
                                                <ImageBrush.ImageSource>
                                                    <Binding Path="User.Image">
                                                        <Binding.TargetNullValue>
                                                            <ImageSource>
                                                                /Resources/blackWrench.png
                                                            </ImageSource>
                                                        </Binding.TargetNullValue>
                                                    </Binding>
                                                </ImageBrush.ImageSource>
                                            </ImageBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{Binding User.FullName}"
                                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                   FontWeight="Bold" />
                                        <TextBlock Text="{Binding PostingDateTime, StringFormat={}{0:yyyy/MM/dd hh:mm}}"
                                                   TextAlignment="Right"
                                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                   FontWeight="Normal" />
                                        <TextBlock Text="{Binding Message}"
                                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                   Grid.Column="1"
                                                   Grid.Row="1"
                                                   FontWeight="Normal" />
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <StackPanel Grid.Row="1">
                <TextBox Text="{Binding CurrentFeedback.Message, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         Height="100"
                         materialDesign:HintAssist.Hint="Начните вводить сообщение" />
                <ComboBox ItemsSource="{Binding UsersToWhoICanSend}"
                          SelectedItem="{Binding CurrentFeedback.User1, ValidatesOnDataErrors=True}"
                          DisplayMemberPath="FullName"
                          materialDesign:HintAssist.Hint="Выберите кому отправить">
                </ComboBox>
                <Button Command="{Binding SendFeedbackCommand}"
                        Content="Отправить" />
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
